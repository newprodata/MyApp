	  <script type="text/javascript">
	       
				$(document).ready(function (){


					$('#aParent').bind("DOMSubtreeModified",function(){
						
				            $('#txt_1').val('');
						var list_items = new Array;
						$('#aParent success').each(
						function(i, list_item) {
					 		list_items.push(list_item.innerHTML);
						 }
						);			
						if(list_items!=""){
							$('#txt_1').val(list_items.join(', '));}
						else{
							$('#txt_1').val(list_items.join(''));}
					});

				$('#button7').click(function(){
					//$('#txt_1').val('');
					var list_items = new Array;
					$('#aParent button').each(
					function(i, list_item) {
				 		list_items.push(list_item.innerHTML);
					 }
					);			
					if(list_items!=""){
						$('#txt_1').val(list_items.join(', '));}
					    // loop through each imploding_feature and remove value if exist
				});
				function onchange() {
				            $('#txt_1').val('');
				            var list_items = new Array;
				            $('.aParent button').each(
				                function(i, list_item) {
				                    list_items.push(list_item.innerHTML);
				                }
				            );
					if(list_items!=""){
						$('#txt_1').val(list_items.join(' , '));}
					else{
						$('#txt_1').val(list_items.join(''));}
					
				        };
				function change(){
				            $('#txt_1').val('');
				            var list_items = new Array;
				            $('#aParent button').each(
				                function(i, list_item) {
				                    list_items.push(list_item.innerHTML);
				                }
				            );
					if(list_items!=""){
						$('#txt_1').val(list_items.join(', '));}
					else{
						$('#txt_1').val(list_items.join(''));}
				}
				$('#txt_1').val('TEST');
				$('#drinks').show();
				$('#fruits').hide();
				$('#snacks').hide();
				$('#vegetables').hide();

				$('.container .draggable-list').sortable({
				        connectWith: '.container .draggable-list'
				       });
					var str2= [% message2 %];
					var str5= [% message5 %];
				//	alert(str2);
				//	alert(str5);
				str = str5.join(',');
				string = str.split(", ");
				for(var i =0; i < string.length; i++){
					//console.log(string[i]);
					var button = document.createElement("div");
				  	var text = document.createTextNode(string[i]);
	   				if(text.data!=''){
					button.appendChild(text);
					button.setAttribute("class", ".container .draggable-item success");
	   				var teg =  document.getElementById("sortable1").appendChild(button);
	   				}

				}
						
				$('#txt_3').val(str5);
				$('#txt_2').val(str2);

				

				//if($('.bParent button').length!=2){
				 //       change();
				  //:w
				//}

				$('#button3').click(function(){
				$('#drinks').show();
				$('#fruits').hide();
				$('#snacks').hide();
				$('#vegetables').hide();
				});
				$('#button4').click(function(){
				$('#drinks').hide();
				$('#fruits').show();
				$('#snacks').hide();
				$('#vegetables').hide();
				});
				$('#button5').click(function(){
				$('#drinks').hide();
				$('#Fruits').hide();
				$('#snacks').show();
				$('#vegetables').hide();
				});
				$('#button6').click(function(){
				$('#drinks').hide();
				$('#fruits').hide();
				$('#snacks').hide();
				$('#vegetables').show();
				});
				});
